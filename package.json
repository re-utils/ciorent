{
  "name": "ciorent",
  "version": "0.0.11",
  "description": "A lightweight, low-overhead concurrency library",
  "homepage": "https://ciorent.netlify.app",
  "repository": {
    "type": "github",
    "url": "https://github.com/re-utils/ciorent"
  },
  "keywords": [
    "low-overhead",
    "lightweight",
    "concurrency",
    "cross-runtime"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "task": "bun scripts/task.ts",
